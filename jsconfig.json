{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "@root/*": [
        "./*"
      ],
      "@controllers/*": [
        "./src/adapters/controllers/*"
      ],
      "@database/*": [
        "./src/frameworks/database/*"
      ],
      "@common/*": [
        "./src/frameworks/common/*"
      ],
      "@routes/*": [
        "src/frameworks/web/routes/*"
      ],
      "@middleware/*": [
        "./src/frameworks/web/middleware/*"
      ],
      "@axios/*": [
        "./src/frameworks/web/axios/*"
      ],
      "@entities/*": [
        "./src/entities/*"
      ],
      "@use_cases/*": [
        "./src/application/use_cases/*"
      ],
      "@tests/*": [
        "./tests/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}